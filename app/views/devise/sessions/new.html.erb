
<div class="page-min-height d-flex justify-content-center align-items-center">
  <div class="login-container p-5 rounded-2">
    <h2 class="title-font fs-1 mx-auto w-fit-content mt-3 mb-5">eBooks<span class="text-primary">Store.</span></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"form") do |f| %>
      <div class="form-group my-3">
        <%= f.label :email, class:"text-font1 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>

      <div class="form-group my-3">
        <%= f.label :password, class:"text-font1 mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class:"text-font1" %>
        </div>
      <% end %>

      <div class="d-flex justify-content-center">
        <%= f.submit "Log in", class:'btn btn-outline-primary rounded-pill text-font1 w-50 my-3' %>
      </div>
    <% end %>

    <p class="text-font1 mt-3">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
  </div>
</div>
