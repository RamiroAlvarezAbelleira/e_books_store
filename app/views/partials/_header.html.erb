<header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <%= link_to 'EBooksStore', root_path, class:"navbar-brand" %>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    
                    
                    <% if current_user && current_user.admin %>
                        <li class="nav-item">
                            <%= link_to 'Authors', admin_authors_path, class:"nav-link" %>
                        </li>
                        <li class="nav-item">
                            <%= link_to 'Publishers', admin_publishers_path, class:"nav-link" %>
                        </li>
                        <li class="nav-item">
                            <%= link_to 'Books', admin_books_path, class:"nav-link" %>
                        </li>
                    <% else %>
                        <li class="nav-item">
                            <%= link_to 'Home', root_path, class:"nav-link" %>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Books</a>
                        </li>
                    <% end %>

                </ul>
                <% unless current_user && current_user.admin %>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                <% end %>
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <% if current_user %>
                        <li class="nav-item">
                            <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "nav-link" %>
                        </li>
                    <% else %>
                        <li class="nav-item">
                            <%= link_to 'Login', new_user_session_path, class:"nav-link" %>
                        </li>
                        <li class="nav-item">
                            <%= link_to 'Register', new_user_registration_path, class:"nav-link" %>
                        </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </nav>
</header>