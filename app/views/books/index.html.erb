

<h1 class="title-font m-title title-fs text-center">Welcome to <span class="text-primary">eBooksStore!</span></h1>
<%= form_with(url: root_path, method: "get", class:"form d-flex align-items-end justify-content-between mb-5") do |form| %>
    <div class="form-group w-100 me-2">
      <%= form.text_field :query, class: "form-control", placeholder: "Search by Title, ISBN, author's name, or publisher's name" %>
    </div>
    <div class="form-group">
        <%= form.submit "Search", class: "btn btn-outline-primary" %>
    </div>
<% end %>
<% @books.each do |book| %>
    <article class="py-3 px-5 my-3 shadow rounded-3 border-3 border-bottom border-primary">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="fs-1 text-font text-capitalize"><%= book.title %></h5>
                <p class="opacity-50 text-font1">By <%= book.author.full_name %></p>
            </div>
            <div>
                <p  class="fs-4 mt-3 text-font1">$ <%= book.price %></p>
            </div>
        </div>
        <div  class="d-flex justify-content-between align-items-end">
            <div>
                <p class="m-0 opacity-50 text-font1">Published in <%= book.date_of_publication %></p>
            </div>
            <div>
                <%= link_to 'Detail', book_path(book), class:"btn btn-outline-primary rounded-pill text-font1" %> 
            </div>
        </div>
    </article>
<% end %>

<ul class="pagination justify-content-center my-5">
    <%= will_paginate @books, renderer: BootstrapWillPaginateRenderer %>
</ul>