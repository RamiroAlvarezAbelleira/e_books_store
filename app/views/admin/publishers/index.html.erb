<div class="page-min-height d-flex flex-column align-items-start justify-content-center">
  <h3 class="my-5">Publishers list</h3>

  <%= render 'filters', q: @q %>

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Books count</th>
        <th> </th>
        <th> </th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <% @publishers.each do |publisher| %>
        <tr>
          <td>
            <%= publisher.name %>
          </td>
          <td>
            <%= publisher.book_count %>
          </td>

          <td><div class="d-flex justify-content-center"><%= link_to 'Show', admin_publisher_path(publisher), class:"btn btn-outline-primary btn-sm" %></div></td>
          <td><div class="d-flex justify-content-center"><%= link_to 'Edit', edit_admin_publisher_path(publisher), class:"btn btn-outline-primary btn-sm" %></div></td>
          <td><div class="d-flex justify-content-center"><%= link_to 'Delete', admin_publisher_path(publisher), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %></div></td>
          
        </tr>
        <% end %>
    </tbody>
  </table>

  <br>
  
  <ul class="pagination justify-content-center w-100">
    <%= will_paginate @authors, renderer: BootstrapWillPaginateRenderer %>
  </ul>
  
  <%= link_to 'Add publisher', new_admin_publisher_path, class:"btn btn-outline-primary mb-5" %>
</div>