<div class="jumbotron">
    <% if notice %>
    <div class="alert alert-success" role="alert"><%= notice %></div>
    <% end %>
    <h1 class="display-4">
        <%= @publisher.name %>
    </h1>
    <br/>

    <%= link_to 'Edit', edit_admin_publisher_path(@publisher), class:"btn btn-secondary" %>

    <%= link_to 'Delete', admin_publisher_path(@publisher), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
    
    <%= link_to 'Back', admin_publishers_path, class:"btn btn-dark" %>

</div>