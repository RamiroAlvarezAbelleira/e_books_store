<div class="page-min-height d-flex flex-column align-items-start justify-content-center">
    <h3 class="my-5">Publisher show</h3>

    <div class="jumbotron">
        <h1 class="display-4">
            <%= @publisher.name %>
        </h1>
    </div>

    <div class="d-flex flex-row my-5">
        <%= link_to 'Edit', edit_admin_publisher_path(@publisher), class:"btn btn-outline-primary mr-3" %>

        <%= link_to 'Delete', admin_publisher_path(@publisher), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger mx-3" %>
        
        <%= link_to 'Back', admin_publishers_path, class:"btn btn-outline-dark ml-3" %>
    </div>
</div>