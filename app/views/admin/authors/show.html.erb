<div class="jumbotron">
    <h1 class="display-4">
        <%= @author.firstname %>
        <%= @author.lastname %>
    </h1>
    <p class="lead">
        <%= @author.date_of_birth %>  | 
        <%= @author.about %>  |  
        <%= @author.nationality %>
    </p>
    <br/>

    <%= link_to 'Edit', edit_admin_author_path(@author), class:"btn btn-secondary" %>

    <%= link_to 'Delete', admin_author_path(@author), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
    
    <%= link_to 'Back', admin_authors_path, class:"btn btn-dark" %>

</div>