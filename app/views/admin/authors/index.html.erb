<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Date of birth</th>
        <th>Nationality</th>
        <th> </th>
        <th> </th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td>
            <%= author.firstname + ' ' + author.lastname %>
          </td>
          <td><%= author.date_of_birth %></td>
          <td><%= author.nationality %></td>

          <td><%= link_to 'Show', admin_author_path(author), class:"btn btn-secondary" %></td>
          <td><%= link_to 'Edit', edit_admin_author_path(author), class:"btn btn-secondary" %></td>
          <td><%= link_to 'Delete', admin_author_path(author), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %></td>
          
        </tr>
        <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Add author', new_admin_author_path, class:"btn btn-secondary" %>