<h3 class="my-5">Authors list</h3>
<%= search_form_for @q, class:"form", url: :admin_authors do |f| %>
  <div class="form-group">
    <%= f.label :firstname, 'Search by name'%>
    <%= f.text_field :firstname_cont, class:"form-control", placeholder:"First name"%>
  </div>
  <div class="form-group">
    <%= sort_link(@q, :lastname, default_order: :desc, class:"text-decoration-none text-dark") do %>
      <strong class="text-decoration-none">Order by lastname</strong>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit class:'btn btn-secondary'%>
  </div>
<% end %>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Books count</th>
        <th> </th>
        <th> </th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td>
            <%= author.firstname + ' ' + author.lastname %>
          </td>
          <td><%= author.book_count %></td>

          <td><%= link_to 'Show', admin_author_path(author), class:"btn btn-secondary" %></td>
          <td><%= link_to 'Edit', edit_admin_author_path(author), class:"btn btn-secondary" %></td>
          <td><%= link_to 'Delete', admin_author_path(author), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %></td>
          
        </tr>
        <% end %>
    </tbody>
  </table>

  <br>
  
  <ul class="pagination justify-content-center">
    <%= will_paginate @authors, renderer: BootstrapWillPaginateRenderer %>
  </ul>

  <%= link_to 'Add author', new_admin_author_path, class:"btn btn-secondary" %>