<%= turbo_frame_tag 'error_messages' do %>
    <% if author.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(author.errors.count, "error") %> something went wrong!</h2>

            <ul>
            <% author.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>
<% end %>