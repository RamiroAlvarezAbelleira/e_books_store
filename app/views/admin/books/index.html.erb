<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Publisher</th>
        <th>ISBN</th>
        <th>Price</th>
        <th> </th>
        <th> </th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= "#{book.author.firstname} #{book.author.lastname} (Age: #{book.author.age})" %></td>
          <td><%= book.publisher.name %></td>
          <td><%= book.isbn %></td>
          <td><%= book.price %></td>

          <td><%= link_to 'Show', admin_book_path(book), class:"btn btn-secondary" %></td>
          <td><%= link_to 'Edit', edit_admin_book_path(book), class:"btn btn-secondary" %></td>
          <td><%= link_to 'Delete', admin_book_path(book), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %></td>
          
        </tr>
        <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Add book', new_admin_book_path, class:"btn btn-secondary" %>