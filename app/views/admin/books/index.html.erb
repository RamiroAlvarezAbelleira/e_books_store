<div class="page-min-height d-flex flex-column align-items-start justify-content-center">
  <h3 class="my-5">Books list</h3>

  <%= render 'update_prices_form' %>
  <%= render 'filters', q: @q %>

  <table class="table table-striped table-bordered table-hover align-middle">
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Publisher</th>
        <th>ISBN</th>
        <th>Price</th>
        <th> </th>
        <th> </th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= "#{book.author.firstname} #{book.author.lastname} (Age: #{book.author.age})" %></td>
          <td><%= book.publisher.name %></td>
          <td><%= book.isbn %></td>
          <td><%= book.price %></td>

          <td><div class="d-flex justify-content-center"><%= link_to 'Show', admin_book_path(book), class:"btn btn-outline-primary btn-sm" %></div></td>
          <td><div class="d-flex justify-content-center"><%= link_to 'Edit', edit_admin_book_path(book), class:"btn btn-outline-primary btn-sm" %></div></td>
          <td><div class="d-flex justify-content-center"><%= link_to 'Delete', admin_book_path(book), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %></div></td>
          
        </tr>
        <% end %>
    </tbody>
  </table>

  <br>
  
  <ul class="pagination justify-content-center w-100">
    <%= will_paginate @authors, renderer: BootstrapWillPaginateRenderer %>
  </ul>
  
  <%= link_to 'Add book', new_admin_book_path, class:"btn btn-outline-primary mb-5" %>
</div>