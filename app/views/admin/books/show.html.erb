<h3 class="my-5">Book show</h3>
<div class="jumbotron">
    <h1 class="display-4">
        <%= @book.title %>
    </h1>
    <p class="lead">
        Author: <%= @book.author.firstname %>  | 
        Published in: <%= @book.date_of_publication %>  |  
        Publisher: <%= @book.publisher.name %>  |
        ISBN-10: <%= @book.isbn %>
    </p>

    <p class="fs-5">$ <%= @book.price %></p>

    <h5 class="mt-5">Review:</h5>
    <p class="fs-5"><%= @book.review %></p>
    <br/>
</div>

<div class="d-flex flex-row my-5">
    <%= link_to 'Edit', edit_admin_book_path(@book), class:"btn btn-outline-primary mr-3" %>

    <%= link_to 'Delete', admin_book_path(@book), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger mx-3" %>
    
    <%= link_to 'Back', admin_books_path, class:"btn btn-outline-dark ml-3" %>
</div>