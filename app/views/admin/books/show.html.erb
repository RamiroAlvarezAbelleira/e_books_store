<div class="jumbotron">
    <h1 class="display-4">
        <%= @book.title %>
    </h1>
    <p class="lead">
        <%= @book.author.firstname %>  | 
        <%= @book.date_of_publication %>  |  
        <%= @book.publisher.name %>
        <%= @book.isbn %>
        <%= @book.review %>
        <%= @book.price %>
    </p>
    <br/>

    <%= link_to 'Edit', edit_admin_book_path(@book), class:"btn btn-secondary" %>

    <%= link_to 'Delete', admin_book_path(@book), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
    
    <%= link_to 'Back', admin_books_path, class:"btn btn-dark" %>

</div>